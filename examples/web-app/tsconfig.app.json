{
  "extends": "../../tsconfig.base.json", // Inherit from root
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // "target": "ES2020", // Inherited, base is ES2022
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Match base target, keep DOM libs
    // "module": "ESNext", // Inherited, base is "preserve" - Vite handles this
    // "skipLibCheck": true, // Inherited

    /* Bundler mode */
    "moduleResolution": "bundler", // Keep for Vite compatibility
    "allowImportingTsExtensions": true, // Keep if needed by Vite/React setup
    // "isolatedModules": true, // Inherited
    // "moduleDetection": "force", // Inherited
    "noEmit": true, // Keep true, Vite handles emit
    "jsx": "react-jsx", // Keep React specific setting

    /* Project References / Monorepo */
    "composite": false, // Disable composite for Vite app, Vite handles build
    // "declarationMap": true, // Invalid without 'declaration' or 'composite' when 'noEmit' is true
    "baseUrl": ".", // Set base URL for path mapping
    "paths": {
      "@typeql/core": ["../../packages/core/src"], // Map core package source
      "@typeql/core/*": ["../../packages/core/src/*"],
      "@typeql/react": ["../../packages/react/src"], // Map react package source
      "@typeql/react/*": ["../../packages/react/src/*"],
      "@typeql/transport-websocket": ["../../packages/transport-websocket/src"], // Map ws transport source
      "@typeql/transport-websocket/*": ["../../packages/transport-websocket/src/*"]
      // Add mappings for other packages if needed
    },


    /* Linting (Inherited or keep specific ones) */
    // "strict": true, // Inherited
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "noUncheckedSideEffectImports": true // Inherited? Check base.
  },
  "include": ["src"], // Only include app source code
  "references": [ // Add references to dependent workspace packages' tsconfig files
    { "path": "../../packages/core/tsconfig.json" },
    { "path": "../../packages/react/tsconfig.json" },
    { "path": "../../packages/transport-websocket/tsconfig.json" },
    { "path": "./tsconfig.node.json" } // Add reference to the node config
  ]
}
