{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    /* Build options */
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist", // Explicitly set declaration output dir
    "lib": ["ES2016", "DOM"],
    "composite": true,
    "baseUrl": ".", // Add back baseUrl
    "paths": { // Add back paths
      // "@sylphlab/typeql-shared": ["../shared/src/index.ts"] // Rely on project references
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__"],
  "references": [ // Add back references
    { "path": "../shared" }
  ]
}