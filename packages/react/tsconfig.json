{
  "extends": "../../tsconfig.base.json", // Assuming a base tsconfig exists or will be created
  "compilerOptions": {
    "outDir": "./dist",
    // "rootDir": "./src", // Remove rootDir
    "jsx": "react-jsx", // Use modern JSX transform
    "lib": ["DOM", "ESNext"], // Include DOM types for React
    "declaration": true,
    "declarationDir": "./dist", // Specify output directory for declarations
    "declarationMap": true,
    "sourceMap": true,
    "composite": true // Restore composite flag for project references
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [ // Restore references
    { "path": "../shared" },
    { "path": "../client" }
  ]
}
