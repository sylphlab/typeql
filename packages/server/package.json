{
  "name": "@sylphlab/typeql-server",
  "version": "0.0.1",
  "description": "Server library for TypeQL - TypeScript-first realtime API framework.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf --glob dist \"*.tsbuildinfo\"",
    "build:js": "pnpm exec tsup --dts false",
    "test": "vitest run"
  },
  "keywords": [
    "typeql",
    "server",
    "rpc",
    "typescript",
    "realtime",
    "state-sync"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3",
    "terser": "^5.39.0",
    "vitest": "^3.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sylphlab/typeql-shared": "workspace:*",
    "zod": "^3.24.2"
  }
}