{
  "name": "@sylph/typeql-preact",
  "version": "0.1.1",
  "private": false,
  "description": "Preact hooks for TypeQL",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external preact @sylph/typeql-core",
    "dev": "bun run build --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@sylph/typeql-core": "workspace:*",
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "@testing-library/preact": "^3.2.4",
    "@sylph/typeql-core": "workspace:*",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "preact": "^10.22.1",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4",
    "vitest": "^3.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}