{
  "name": "@sylphlab/zen-query-transport-websocket",
  "version": "0.0.3",
  "description": "WebSocket transport implementation for SylphLab",
  "keywords": [
    "sylphlab",
    "transport",
    "websocket"
  ],
  "author": "SylphLab",
  "license": "MIT",
  "homepage": "https://github.com/sylphlab/req-delta/tree/main/packages/transport-websocket#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphlab/req-delta.git",
    "directory": "packages/transport-websocket"
  },
  "bugs": {
    "url": "https://github.com/sylphlab/req-delta/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --max-warnings=0",
    "lint:fix": "eslint . --fix --cache",
    "format": "prettier --write . --cache --ignore-unknown",
    "check-format": "prettier --check . --cache --ignore-unknown",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "pnpm run check-format && pnpm run lint && pnpm run typecheck && pnpm run test",
    "clean": "rimraf dist .turbo node_modules"
  },
  "dependencies": {
    "@sylphlab/zen-query-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/ws": "^8.5.11",
    "eslint": "^9.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.9",
    "tsup": "^8.2.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.4",
    "ws": "^8.18.0"
  },
  "publishConfig": {
    "access": "public"
  }
}