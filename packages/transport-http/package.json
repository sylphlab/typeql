{
  "name": "@sylphlab/typeql-transport-http",
  "version": "0.1.0",
  "description": "TypeQL HTTP transport client",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --max-warnings=0",
    "lint:fix": "eslint . --fix --cache",
    "format": "prettier --write . --cache --ignore-unknown",
    "check-format": "prettier --check . --cache --ignore-unknown",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "pnpm run check-format && pnpm run lint && pnpm run typecheck && pnpm run test"
  },
  "dependencies": {
    "@sylphlab/typeql-client": "workspace:*",
    "@sylphlab/typeql-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "eslint": "^9.4.0",
    "prettier": "^3.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vitest": "^3.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@sylphlab/prettier-config",
  "license": "MIT"
}