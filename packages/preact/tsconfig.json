{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    // "baseUrl": ".", // Keep removed
    "jsx": "preserve", // Preserve JSX for build tool (Vite/tsup) to handle with Preact plugin
    "jsxImportSource": "preact" // Specify Preact as the source
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/*.spec.ts", "**/*.bench.ts"]
}