{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true, // Enable composite for project references
    "declaration": true, // Required for composite projects
    "declarationMap": true, // Optional: Better DX for Go To Definition
    "jsx": "react-jsx", // Assuming Preact uses React-style JSX
    "jsxImportSource": "preact" // Specify Preact for JSX transform
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/*"],
  "references": [
    { "path": "../core" } // Reference the core package
  ]
}