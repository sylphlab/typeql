{
  "compilerOptions": {
    "baseUrl": ".", // Needed for paths to work correctly
    "paths": {
      // Add explicit paths first for potentially better IDE resolution
      "@sylphlab/zen-query-client": ["./packages/client/src"],
      "@sylphlab/zen-query-shared": ["./packages/shared/src"],
      // Keep wildcard as fallback
      "@sylphlab/*": ["./packages/*/src"]
    },
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    // "isolatedModules": true, // Conflicts with composite/project references

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If NOT transpiling with TypeScript: */
    "module": "preserve",
    // "noEmit": true, // Keep removed

    /* If your code runs in the DOM: */
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
