{
  "compilerOptions": {
    // "baseUrl": ".", // Not strictly needed if not using paths
    // "paths": {}, // Rely on project references
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    // "isolatedModules": true, // Conflicts with composite/project references

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If NOT transpiling with TypeScript: */
    "module": "preserve",
    // "noEmit": true, // Keep removed

    /* If your code runs in the DOM: */
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
